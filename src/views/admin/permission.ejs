<!-- Toast message -->
<div
  id="toastNotice"
  class="toast"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
  data-bs-delay="3000"
  style="background: white; position: absolute; top: 10px; z-index: 20"
>
  <div class="toast-header">
    <div
      style="
        margin-right: 10px;
        width: 20px;
        height: 20px;
        background: blue;
        border-radius: 4px;
      "
    ></div>
    <strong class="me-auto">Grela Admin</strong>
    <small>1 mins ago</small>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="toast"
      aria-label="Close"
    ></button>
  </div>
  <div class="toast-body">
    <div
      class="success-alert alert alert-primary"
      role="alert"
      style="display: none"
    ></div>
    <div
      class="error-alert alert alert-danger"
      role="alert"
      style="display: none"
    ></div>
  </div>
</div>

<!-- Table -->
<div class="row">
  <!-- column -->
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <!-- title -->
        <div class="d-md-flex">
          <div>
            <h4 class="card-title">Permission</h4>
            <h5 class="card-subtitle">Overview of Permission</h5>
          </div>
        </div>
        <!-- title -->
        <div class="table-responsive">
          <table class="table mb-0 table-hover align-middle text-nowrap">
            <thead>
              <tr>
                <th class="border-top-0">Serials</th>
                <th class="border-top-0">Name</th>
                <th class="border-top-0">Email</th>
                <th class="border-top-0">Role</th>
                <th class="border-top-0">Address</th>
                <th class="border-top-0">Phone</th>
                <th class="border-top-0">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i = 0; i < data.length; i++ ) { %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="m-r-10">
                      <a
                        class="btn btn-circle d-flex justify-content-center align-items-center btn-info text-white"
                        ><%= i + 1 %></a
                      >
                    </div>
                  </div>
                </td>
                <td><%= data[i].lastName %></td>
                <td><%= data[i].email %></td>
                <td style="text-transform: capitalize">
                  <% if (data[i].roleId === "customer") { %>
                  <label class="badge bg-secondary"
                    ><%= data[i].roleId %></label
                  >
                  <% } else if (data[i].roleId === "staff") { %>
                  <label class="badge bg-success">
                    <%= data[i].roleId %>
                  </label>
                  <% } else { %>
                  <label class="badge bg-primary">
                    <%= data[i].roleId %>
                  </label>
                  <% } %>
                </td>
                <td><%= data[i].address %></td>
                <td><%= data[i].phone %></td>
                <!-- <td>
                  <label class="badge bg-danger">Angular</label>
                  <label class="badge bg-info">Vue Js</label>
                </td> -->
                <td>
                  <button
                    type="button"
                    class="btn btn-success"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal"
                    style="color: white; font-weight: 500"
                    onclick="deleteUser('<%= data[i].id %>', '<%= data[i].lastName %>')"
                  >
                    Change Permission
                  </button>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Table -->

<!-- Modal -->
<div
  class="modal fade"
  id="deleteModal"
  tabindex="-1"
  aria-labelledby="deleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form onsubmit="return false" id="formChangePermission">
        <div class="modal-header">
          <h5
            class="modal-title fs-2 fw-bolder text-success"
            id="deleteModalLabel"
          >
            Change permission
          </h5>
          <button
            type="button"
            class="btn-close-delete btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="px-3 row g-4">
            <div class="col-6">
              <div class="form-check form-switch">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="allPermission"
                  value="all"
                />
                <label class="form-check-label" for="allPermission">
                  All permission
                </label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-check form-switch">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="readPermission"
                  value="read"
                />
                <label class="form-check-label" for="readPermission">
                  Only read
                </label>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <a type="button" class="btn-delete btn btn-success text-white"
            >Save</a
          >
        </div>
      </form>
    </div>
  </div>
</div>
<!-- End Modal -->

<!-- Script -->
<script src="/js/admin/changePerrmission.js"></script>

<!-- Style -->
<style>
  #formChangePermission label {
    font-weight: 500;
    color: rgb(14, 14, 14);
  }

  #formChangePermission .form-check-input {
    border-radius: 8px !important;
  }
</style>
