<% if (isSuccess) { %>
<form class="profile-info row gx-5 gy-4" action="/put-user" method="POST">
  <div class="col-12 d-flex justify-content-start align-items-center gap-5">
    <div class="profile-image">
      <img src="/images/logo.png" alt="" />
    </div>
    <div class="profile-name">
      <p class="fs-4 fw-bold"><%= data.firstName %> <%= data.lastName %></p>
      <span class="fs-6 text-black-50"><%= data.address %></span>
    </div>
  </div>

  <div class="col-6 profile-input">
    <label for="firstName">First Name</label>
    <input
      type="text"
      name="firstName"
      id="firstName"
      value="<%= data.firstName %>"
    />
  </div>

  <div class="col-6 profile-input">
    <label for="lastName">Last Name</label>
    <input
      type="text"
      name="lastName"
      id="lastName"
      value="<%= data.lastName %>"
    />
  </div>

  <div class="col-6 profile-input">
    <label for="gender">Gender</label>
    <select name="gender" id="gender">
      <option value="" selected>Choose gender...</option>
      <option value="true" <%= data.gender ? 'selected' : '' %>>Male</option>
      <option value="false" <%= data.gender ? '' : 'selected' %>>Female</option>
    </select>
  </div>

  <div class="col-6 profile-input">
    <label for="email">Email</label>
    <input type="email" name="email" id="email" value="<%= data.email %>" />
  </div>

  <div class="col-6 profile-input">
    <label for="phone">Phone</label>
    <input type="text" name="phone" id="phone" value="<%= data.phone %>" />
  </div>

  <div class="col-6 profile-input">
    <label for="address">Address</label>
    <input
      type="text"
      name="address"
      id="address"
      value="<%= data.address %>"
    />
  </div>

  <input type="text" name="id" value="<%= data.id %>" hidden>

  <div class="col-12 profile-input">
    <input type="submit" value="Save change" />
  </div>
</form>
<% } %>
